doctype html
html
  head
    title Register
  body
    pre #{error}
    form(method="POST" action="/authorization/register/local")
        |Login:
        input(type="text" name="username")
        br
        |Email:
        input(type="text" name="email")
        br
        |Password:
        input(type="password" name="password")
        br
        input(type="submit" value="Zarejestruj")